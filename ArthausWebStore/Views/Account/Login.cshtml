@using System.Threading.Tasks
@using Microsoft.AspNetCore.Identity
@model LoginViewModel

@inject SignInManager<AppUser> SignInManager
<div class="col-md-6 col-sm-6 col-xs-12">
    <form asp-controller="Account" asp-action="Login" method="post" role="form">


        <div class="customer-login text-left">
            <h4 class="title-1 title-border text-uppercase mb-30">Registered customers</h4>
            <p class="text-gray">If you have an account with us, please login!</p>

            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="All" class="text-danger"></div>


            <input asp-for="Email" type="text" placeholder="Your Email address.." />
            <span asp-validation-for="Email" class="text-danger"></span>


            <input asp-for="Password" placeholder="Password"  />
            <span asp-validation-for="Password" class="text-danger"></span>
            
            
            <p><a href="#" class="text-gray">Forgot your password?</a></p>

            <button type="submit" data-text="login" class="button-one submit-button mt-15">login</button>
        </div>
    </form>
</div>